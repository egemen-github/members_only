<div class="card">
  <div class="card-header">
    <% if user_signed_in? %>
      <%= User.find(post.user_id).email %>
    <% else %>
      <span class="align-middle fst-italic">Anonim User</span>
    <% end %>
  </div>
  <div class="card-body">
    <h4 class="card-title">
      <%= post.title %>
    </h4>
    <p class="card-text">
      <%= post.content %>
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to "Show this post", post, class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
</div>